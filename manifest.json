{
  "manifest_version": 3,
  "name": "QuickTools",
  "description": "Provides a lot of useful tools",
  "version": "0.2",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/main.js",
    "type": "module"
  },
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "cookies",
    "tabGroups",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "commands": {
    "collect-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "windows": "Ctrl+Shift+Y"
      },
      "description": "Collect all open tab titles and links"
    }
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscripts/grabLinksFromElement.js"],
      "run_at": "document_idle"
    }
  ]
}
