{
  "manifest_version": 3,
  "name": "QuickTools",
  "description": "Provides a lot of useful tools",
  "version": "0.2",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/main.js",
    "type": "module"
  },
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "cookies",
    "tabGroups",
    "scripting",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "commands": {
    "collect-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "windows": "Ctrl+Shift+Y"
      },
      "description": "Collect all open tab titles and links"
    },
    "search-selection-on-google": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "windows": "Ctrl+Shift+O"
      },
      "description": "Search selection on google"
    },
    "grab-links-from-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "windows": "Ctrl+Shift+B"
      },
      "description": "Grab links from selected box"
    },
    "add-tab-to-new-group": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "windows": "Ctrl+Shift+B"
      },
      "description": "Add current tab to new group"
    }
  },
  "host_permissions": ["<all_urls>"]
}
